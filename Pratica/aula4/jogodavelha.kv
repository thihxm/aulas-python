<Jogadores>
  on_pre_enter: root.preencher_jogadores()
  FloatLayout:
    canvas.before:
      Clear
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size

    Label:
      text: 'Jogo da Velha Top'
      font_size: 30
      size_hint_y: None
      height: 25
      pos_hint: {'top': 0.95}
      color: 0.17, 0.24, 0.31, 1

    Label:
      text: '[color=#3498db]Jogador 1[/color]'
      font_size: 25
      size_hint_y: None
      height: 25
      pos_hint: {'y': 0.7}
      markup: True

    TextInput:
      id: jogador1
      size_hint: (0.8, None)
      height: 30
      pos_hint: {'center_x': 0.5, 'y': 0.6}

    Label:
      text: 'Jogador 2'
      font_size: 25
      size_hint_y: None
      height: 25
      pos_hint: {'y': 0.45}
      color: 0.91, 0.3, 0.24, 1

    TextInput:
      id: jogador2
      size_hint: (0.8, None)
      height: 30
      pos_hint: {'center_x': 0.5, 'y': 0.35}

    Button:
      background_color: 0.17, 0.24, 0.31, 1
      background_normal: ''
      color: 1, 1, 1, 1
      bold: True
      text: 'JOGAR'
      on_release: root.jogar()
      size_hint: (None, None)
      width: 150
      height: 40
      pos_hint: {'center_x': 0.5, 'y': 0.05}

<Jogo>
  on_pre_enter: root.preparar_jogo()
  BoxLayout:
    orientation: 'vertical'
    canvas.before:
      Clear
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size

    Label:
      text: ''
      font_size: 30
      id: label_jogador_atual
      markup: True

    Label:
      text: '[color=#2c3e50]Ã‰ A SUA VEZ[/color]'
      font_size: 25
      markup: True

    GridLayout:
      size_hint_y: None
      height: 300
      cols: 3
      rows: 3
      spacing: 3
      padding: 6

      Button:
        id: btn00
        on_release: root.jogar_posicao(0, 0)

      Button:
        id: btn01
        on_release: root.jogar_posicao(0, 1)

      Button:
        id: btn02
        on_release: root.jogar_posicao(0, 2)

      Button:
        id: btn10
        on_release: root.jogar_posicao(1, 0)

      Button:
        id: btn11
        on_release: root.jogar_posicao(1, 1)

      Button:
        id: btn12
        on_release: root.jogar_posicao(1, 2)

      Button:
        id: btn20
        on_release: root.jogar_posicao(2, 0)

      Button:
        id: btn21
        on_release: root.jogar_posicao(2, 1)

      Button:
        id: btn22
        on_release: root.jogar_posicao(2, 2)

<Final>
  on_pre_enter: root.verificar_resultado()
  FloatLayout:
    orientation: 'vertical'
    canvas.before:
      Clear
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size

    Label:
      text: ''
      font_size: 30
      id: mensagem
      markup: True

      size_hint_y: None
      height: 25
      pos_hint: {'top': 0.95}

    Button:
      background_color: 0.17, 0.24, 0.31, 1
      background_normal: ''
      color: 1, 1, 1, 1
      bold: True
      size_hint: (None, None)
      width: 250
      height: 100
      pos_hint: {'center_x': 0.5, 'y': 0.35}

      text: 'NOVO JOGO'
      on_release: root.novo_jogo()

    Button:
      background_color: 0.17, 0.24, 0.31, 1
      background_normal: ''
      color: 1, 1, 1, 1
      bold: True
      size_hint: (None, None)
      width: 250
      height: 100
      pos_hint: {'center_x': 0.5, 'y': 0.05}

      text: 'SAIR'
      on_release: root.sair()
