#:kivy 1.11.0
<Quadro>
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Insira o 1º número'
        TextInput:
            id: input_1
    
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Insira o 2º número'
        TextInput:
            id: input_2
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: '+'
            id: btn_somar
            on_press: root.somar()
        Button:
            text: '-'
            id: btn_subtrair
            on_press: root.subtrair()
        Button:
            text: '×'
            id: btn_multiplicar
            on_press: root.multiplicar()
        Button:
            text: '/'
            id: btn_subtrair
            on_press: root.dividir()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Resultado'
        TextInput:
            id: resultado
